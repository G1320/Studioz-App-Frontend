@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;

.availability-list-container {
  width: 100%;
  background: vars.$white-opacity-02;
  border: 1px solid vars.$white-opacity-06;
  border-radius: vars.$border-radius-large;
  padding: 0.5rem 0.75rem;
  box-shadow: 0 8px 20px vars.$black-opacity-35;
  box-sizing: border-box;
  backdrop-filter: blur(6px);
  -webkit-backdrop-filter: blur(6px);
}

// Shared styling for both list and popup variants
.availability-dropdown-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.35rem;
  max-height: 220px;
  overflow-y: auto;
  scrollbar-width: thin;
  scrollbar-color: vars.$white-opacity-20 transparent;

  &::-webkit-scrollbar {
    width: 6px;
  }

  &::-webkit-scrollbar-track {
    background: transparent;
  }

  &::-webkit-scrollbar-thumb {
    background-color: vars.$white-opacity-18;
    border-radius: 3px;

    &:hover {
      background-color: vars.$white-opacity-30;
    }
  }

  .availability-list-item {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: vars.$white-opacity-03;
    border: 1px solid vars.$white-opacity-05;
    border-radius: vars.$border-radius-medium;
    transition:
      border-color 0.15s ease,
      background-color 0.15s ease;

    &:hover {
      background: vars.$white-opacity-05;
      border-color: vars.$white-opacity-12;
    }

    strong {
      color: var(--text-primary);
      font-size: vars.$font-size-sm-md;
      font-weight: 600;
      white-space: nowrap;
    }

    p {
      margin: 0;
      color: vars.$light-gray-slate-241-245-249-80;
      font-size: vars.$font-size-small;
      line-height: 1.45;
      text-align: right;
      white-space: nowrap;
    }
  }
}

.availability-dropdown-toggle {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 38px;
  height: 38px;
  padding: 0.35rem;
  border-radius: 50%;
  border: 1px solid vars.$white-opacity-10;
  background: vars.$white-opacity-04;
  color: var(--text-primary);
  transition:
    border-color 0.15s ease,
    background-color 0.15s ease,
    transform 0.12s ease;

  &:hover {
    background: vars.$white-opacity-08;
    border-color: vars.$white-opacity-20;
    transform: translateY(-1px);
  }

  &:active {
    transform: translateY(0);
  }
}

.availability-time-icon {
  font-size: 20px;
}

@media (max-width: 640px) {
  .availability-list-container {
    padding: 0.5rem 0.6rem;
  }

  .availability-dropdown-list {
    max-height: 180px;

    .availability-list-item {
      padding: 0.45rem 0.6rem;

      strong {
        font-size: vars.$font-size-small;
      }

      p {
        font-size: vars.$font-size-small;
      }
    }
  }
}
