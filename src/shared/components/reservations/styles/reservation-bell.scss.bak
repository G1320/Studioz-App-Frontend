@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;
@use 'sass:color';

.reservation-bell {
  position: relative;
  display: flex;
  align-items: center;

  &__badge {
    position: absolute;
    top: 0rem;
    right: -0.125rem;
    background: vars.$color-brand;
    color: vars.$text-color-dark;
    font-size: 0.625rem;
    font-weight: 700;
    padding: 0;
    border-radius: 50%;
    width: 0.8rem;
    height: 0.8rem;
    min-width: 0.8rem;
    text-align: center;
    line-height: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow:
      0 1px 4px rgba(vars.$color-brand, 0.4),
      0 0 0 1px vars.$black-opacity-30;
    animation: pulse 2s ease-in-out infinite;
  }
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}
