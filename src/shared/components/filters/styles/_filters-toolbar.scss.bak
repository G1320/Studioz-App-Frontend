@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;

.filters-toolbar {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  padding: 0.6rem 0.75rem;
  border-radius: 14px;
  border: 1px solid vars.$white-opacity-08;
  background: vars.$black-opacity-25;
  backdrop-filter: blur(10px);

  &__filter {
    flex: 1 1 200px;
    min-width: 0;

    @media (max-width: 768px) {
      flex: 1 1 100%;
    }
  }

  &__label {
    display: block;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: vars.$white-opacity-75;
    margin-bottom: 0.3rem;
  }

  &__control {
    width: 100%;
  }

  &__select {
    width: 100%;
    border-radius: 999px;
    padding: 0.4rem 0.9rem 0.4rem 0.65rem;
    background: vars.$black-opacity-35;
    border: 1px solid vars.$white-opacity-15;
    color: vars.$color-text-light-gray;
    font-size: 0.85rem;
    cursor: pointer;
    outline: none;

    &:focus {
      border-color: vars.$white-opacity-35;
      box-shadow: 0 0 0 2px vars.$white-opacity-15;
    }
  }
}


