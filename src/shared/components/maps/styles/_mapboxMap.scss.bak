@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;
@use 'design-system' as ds;

div.studios-map,
div.items-map {
  div {
    border-radius: 8px;
  }
}

.map-loader {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  border-radius: 8px;
  backdrop-filter: blur(2px);
  transition:
    opacity 0.3s ease,
    visibility 0.3s ease;

  &__spinner {
    width: 48px;
    height: 48px;
    border: 3px solid rgba(74, 144, 226, 0.2);
    border-top-color: vars.$color-brand;
    border-radius: 50%;
    animation: map-spin 0.8s linear infinite;
  }
}

@keyframes map-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.map-popup {
  padding: 0;
  max-width: 160px;
  min-width: 140px;
  background-color: #1a1a1a;
  border-radius: 8px;
  overflow: hidden;
  box-shadow:
    0 8px 24px rgba(0, 0, 0, 0.4),
    0 4px 8px rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);

  img {
    width: 100%;
    height: 80px;
    object-fit: cover;
    cursor: pointer;
    transition:
      transform 0.2s ease,
      opacity 0.2s ease;
    display: block;

    &:hover {
      transform: scale(1.05);
      opacity: 0.9;
    }
  }

  .popup-content {
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }
}

.popup-title {
  margin: 0;
  font-size: ds.$font-md;
  font-weight: 700;
  color: #f1f1f1;
  line-height: 1.2;
  text-align: start;
}

.popup-description {
  margin: 0;
  font-size: 0.75rem;
  color: #d1d5db;
  line-height: 1.3;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-align: start;
}

.popup-city {
  margin: 0;
  font-size: 0.6875rem;
  color: #9ca3af;
  line-height: 1.3;
  text-align: start;
}

.minimap {
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);

  .mapboxgl-map {
    border-radius: 8px;
  }
}
