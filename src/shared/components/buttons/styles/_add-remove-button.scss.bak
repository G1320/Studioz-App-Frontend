@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;

button.add-remove-button {
  @include mixins.branded-button;

  --button-hover-bg: #{vars.$brand-opacity-20};
  --button-focus-shadow: #{vars.$blue-opacity-30-alt};

  align-self: center;
  border-radius: 8px;
  cursor: pointer;
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  color: vars.$text-color-primary;

  &:hover:not(:disabled) {
    background-color: var(--button-hover-bg);
    border-color: vars.$color-brand;
    box-shadow: none;
  }

  &:disabled {
    cursor: not-allowed;
    opacity: 0.3;
    pointer-events: none;
  }

  //

  svg {
    font-size: 1.25rem;
    transition: transform 0.25s ease;
  }
}
