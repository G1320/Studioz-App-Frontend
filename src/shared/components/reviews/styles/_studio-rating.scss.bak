@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;

.studio-rating {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  color: vars.$color-text-light-gray;

  &__stars {
    display: inline-flex;
    align-items: center;
    gap: 0.05rem;
  }

  &__star {
    font-size: 1.1rem;
    color: vars.$white-opacity-40;

    &--filled {
      color: vars.$color-rating-yellow;
    }
  }

  &__summary {
    margin: 0;
    font-size: 0.9rem;
    font-weight: 500;
    color: vars.$white-opacity-85;
  }

  &--sm {
    gap: 0.3rem;

    .studio-rating__star {
      font-size: 0.9rem;
    }

    .studio-rating__summary {
      font-size: 0.8rem;
    }
  }

  &--md {
    .studio-rating__star {
      font-size: 1.15rem;
    }
  }

  &--badge {
    gap: 0;

    .studio-rating__badge {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      padding: 0.25rem 0.5rem;
      border-radius: 999px;
      background: var(--bg-elevated);
      border: none;
      box-shadow: none;
      backdrop-filter: none;
      font-size: 0.75rem;
      font-weight: 500;
      line-height: 1.2;
    }

    .studio-rating__badge-icon {
      width: 0.75rem;
      height: 0.75rem;
      color: vars.$color-rating-yellow;
      flex-shrink: 0;
    }

    .studio-rating__badge-value {
      font-size: 0.75rem;
      font-weight: 500;
      color: var(--text-primary);
      line-height: 1.2;
    }

    .studio-rating__badge-count {
      font-size: 0.75rem;
      color: var(--text-muted);
      font-weight: 500;
      line-height: 1.2;
    }
  }
}
