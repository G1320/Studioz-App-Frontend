@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;
@use 'design-system' as ds;

.cancellation-policy-field {
  display: flex;
  flex-direction: column;
  gap: ds.$space-4;
  padding: 1.25rem;
  background: vars.$bg-color-secondary;
  border-radius: vars.$border-radius-large;
  border: 1px solid vars.$white-opacity-15;
  text-align: start;

  &.has-error {
    border-color: vars.$color-warning;
  }

  &__header {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  &__label {
    font-weight: 600;
    font-size: vars.$font-size-medium;
    color: var(--text-primary);
  }

  &__description {
    font-size: vars.$font-size-sm-md;
    color: var(--text-tertiary);
    margin: 0;
  }

  &__types {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  &__type {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
    padding: 1rem;
    background: vars.$bg-color-tertiary;
    border: 2px solid vars.$white-opacity-15;
    border-radius: vars.$border-radius-medium;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;

    &:hover {
      border-color: vars.$white-opacity-30;
      background: vars.$bg-color-secondary;
    }

    &.selected {
      border-color: vars.$color-brand;
      background: vars.$brand-opacity-05;

      .cancellation-policy-field__type-name {
        color: vars.$color-brand;
      }
    }

    &-name {
      font-weight: 600;
      font-size: vars.$font-size-sm-md;
      color: var(--text-primary);
      transition: color 0.2s ease;
    }

    &-desc {
      font-size: vars.$font-size-small;
      color: var(--text-tertiary);
    }
  }

  &__notes {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 0.5rem;

    &-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    &-label {
      font-weight: 500;
      font-size: vars.$font-size-sm-md;
      color: var(--text-primary);
    }
  }

  &__language-toggle {
    display: flex;
    gap: 0.25rem;
    background: vars.$white-opacity-10;
    border-radius: vars.$border-radius-xs;
    padding: 2px;
  }

  &__lang-btn {
    padding: 0.375rem 0.75rem;
    font-size: vars.$font-size-small;
    font-weight: 500;
    background: transparent;
    border: none;
    border-radius: vars.$border-radius-small;
    cursor: pointer;
    color: var(--text-tertiary);
    transition: all 0.2s ease;

    &:hover {
      color: var(--text-primary);
    }

    &.active {
      background: vars.$bg-color-tertiary;
      color: var(--text-primary);
    }
  }

  &__textarea {
    padding: 0.75rem;
    font-size: vars.$font-size-sm-md;
    border: 1px solid vars.$white-opacity-15;
    border-radius: vars.$border-radius-medium;
    background: vars.$bg-color-tertiary;
    color: var(--text-primary);
    resize: vertical;
    min-height: 80px;
    font-family: inherit;
    transition: border-color 0.2s ease;

    &:focus {
      outline: none;
      border-color: vars.$white-opacity-30;
    }

    &::placeholder {
      color: vars.$white-opacity-40;
    }
  }

  &__error {
    font-size: vars.$font-size-small;
    color: vars.$color-warning-light;
  }
}

/* RTL support for Hebrew */
[dir='rtl'] .cancellation-policy-field {
  &__type {
    text-align: right;
  }
}
