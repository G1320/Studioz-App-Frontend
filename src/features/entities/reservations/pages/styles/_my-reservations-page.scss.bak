@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;
@use 'design-system' as ds;

// ==========================================
// MY RESERVATIONS PAGE - StudioZ Design System
// Theme: Dark Mode
// ==========================================

// Local aliases (referencing design system)
$page-primary: ds.$primary-yellow;
$page-surface: ds.$zinc-900;
$page-border: ds.$zinc-800;
$page-muted: ds.$zinc-400;
$page-label: ds.$zinc-500;

.my-reservations-page {
  width: 100%;
  max-width: 1540px;
  min-height: 60vh;
  margin-block-start: 0.5rem;
  box-sizing: border-box;
  overflow-x: hidden;

  &__header {
    margin-bottom: vars.$spacing-xl;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: vars.$spacing-small;
    align-items: center;
  }

  &__title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    letter-spacing: -0.025em;
    color: var(--text-primary);
    margin: 0;
    margin-top: 1rem;
    text-align: center;
  }

  &__subtitle {
    font-size: 1.125rem;
    color: var(--text-muted);
    max-width: 36rem;
    margin: 0;
  }

  // Controls container - wraps toggle and filters
  &__controls {
    max-width: 900px;
    margin: 0 auto vars.$spacing-xl;
    display: flex;
    flex-direction: column;
    gap: vars.$spacing-medium;
  }

  &__toggle {
    margin-bottom: 0; // Override default margin, controlled by controls gap
  }

  &__filters {
    margin-bottom: 0; // Override default margin, controlled by controls gap
  }

  &__show-more-button {
    margin-top: vars.$spacing-medium;
    padding: vars.$spacing-small vars.$spacing-medium;
    background: transparent;
    color: $page-primary;
    border: 1px solid $page-primary;
    border-radius: vars.$border-radius-xl;
    font-size: vars.$font-size-medium;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s ease;

    &:hover {
      background: $page-primary;
      color: vars.$bg-color-primary;
      box-shadow: 0 0 20px rgba(255, 209, 102, 0.3);
    }
  }

  @media (max-width: 768px) {
    padding: vars.$spacing-xl vars.$spacing-medium;

    &__title {
      font-size: vars.$font-size-2xl;
    }

    &__subtitle {
      font-size: vars.$font-size-sm-md;
    }
  }
}
