@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;
@use 'sass:color';

.phone-access-form {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: vars.$spacing-xl;

  &__container {
    background: vars.$bg-color-secondary;
    border: 1px solid vars.$white-opacity-10;
    border-radius: vars.$border-radius-large;
    padding: vars.$spacing-2xl;
    max-width: 500px;
    width: 100%;
    box-shadow: vars.$box-shadow-large;
  }

  &__title {
    font-size: vars.$font-size-2xl;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 vars.$spacing-small 0;
    text-align: center;
  }

  &__subtitle {
    font-size: vars.$font-size-medium;
    color: var(--text-tertiary);
    margin: 0 0 vars.$spacing-xl 0;
    text-align: center;
  }

  &__form {
    display: flex;
    flex-direction: column;
    gap: vars.$spacing-large;
  }

  &__input-container {
    width: 100%;
  }

  &__input {
    width: 100%;
    padding: vars.$spacing-medium;
    background: vars.$dark-bg-60;
    border: 1px solid vars.$white-opacity-10;
    border-radius: vars.$border-radius-medium;
    color: var(--text-primary);
    font-size: vars.$font-size-medium;
    transition: border-color 0.2s ease;
    box-sizing: border-box;

    &::placeholder {
      color: vars.$white-opacity-40;
    }

    &:focus {
      outline: none;
      border-color: vars.$color-brand;
    }

    &:hover:not(:focus) {
      border-color: vars.$white-opacity-20;
    }

    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  }

  &__submit-button {
    width: 100%;
    padding: vars.$spacing-medium;
    background: vars.$color-brand;
    color: var(--text-primary);
    border: none;
    border-radius: vars.$border-radius-medium;
    font-size: vars.$font-size-medium;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;

    &:hover:not(:disabled) {
      background: color.adjust(vars.$color-brand, $lightness: -10%);
      transform: translateY(-2px);
      box-shadow: vars.$box-shadow-medium;
    }

    &:active:not(:disabled) {
      transform: translateY(0);
    }

    &:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }
  }

  @media (max-width: 768px) {
    padding: vars.$spacing-large;

    &__container {
      padding: vars.$spacing-xl;
    }

    &__title {
      font-size: vars.$font-size-xl;
    }
  }
}

