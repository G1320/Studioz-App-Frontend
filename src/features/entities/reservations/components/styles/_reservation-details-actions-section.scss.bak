@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;

.reservation-details-actions-section {
  background: vars.$bg-color-secondary;
  border: 1px solid vars.$white-opacity-08;
  border-radius: 24px;
  padding: vars.$spacing-3xl;
  box-shadow: 0 4px 24px vars.$black-opacity-12;

  &__title {
    font-size: vars.$font-size-xl;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 vars.$spacing-2xl 0;
    letter-spacing: -0.3px;
  }

  @media (max-width: 768px) {
    padding: vars.$spacing-2xl;
    border-radius: 16px;

    &__title {
      font-size: vars.$font-size-large;
      margin-bottom: vars.$spacing-xl;
    }
  }
}

