@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;
@use 'design-system' as ds;

.addon-card {
  border: 1px solid vars.$light-gray-e0e0e0;
  border-radius: vars.$border-radius-medium;
  padding: vars.$spacing-medium;
  margin-bottom: vars.$spacing-medium;
  background: var(--text-primary);
  transition: box-shadow 0.2s;

  &:hover {
    box-shadow: 0 2px 8px vars.$black-opacity-10;
  }

  &.inactive {
    opacity: 0.6;
  }

  &-content {
    display: flex;
    gap: ds.$space-4;
    align-items: flex-start;
  }

  &-image {
    width: 80px;
    height: 80px;
    border-radius: 4px;
    overflow: hidden;
    flex-shrink: 0;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  &-info {
    flex: 1;
  }

  &-name {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
  }

  &-description {
    margin: 0 0 0.5rem 0;
    color: vars.$text-color-secondary;
    font-size: 0.9rem;
  }

  &-price {
    display: flex;
    align-items: baseline;
    gap: 0.25rem;
    margin-bottom: 0.5rem;

    .price-amount {
      font-size: 1.2rem;
      font-weight: 700;
      color: vars.$dark-gray-333;
    }

    .price-per {
      font-size: 0.9rem;
      color: vars.$text-color-secondary;
    }
  }

  &-status {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 500;

    &.inactive-badge {
      background: vars.$status-inactive-bg;
      color: vars.$status-inactive-text;
    }
  }

  &-actions {
    display: flex;
    gap: vars.$spacing-sm-md;
    flex-shrink: 0;

    button {
      padding: vars.$spacing-sm-md vars.$spacing-medium;
      border: none;
      border-radius: vars.$border-radius-small;
      cursor: pointer;
      font-size: 0.9rem;
      transition: background 0.2s;

      &.btn-edit {
        background: vars.$action-blue-primary;
        color: var(--text-primary);

        &:hover {
          background: vars.$action-blue-dark;
        }
      }

      &.btn-delete {
        background: vars.$action-red-primary;
        color: var(--text-primary);

        &:hover {
          background: vars.$action-red-dark;
        }
      }
    }
  }
}

