@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;
@use 'sass:color';

article.category-card {
  min-height: 80px; // Increased height to accommodate icon
  background-color: vars.$light-gray-f5f5f5;
  border-radius: vars.$border-radius-large;
  display: flex;
  flex-direction: column;
  justify-content: space-between; // Space between icon and text
  align-items: flex-start; // Align content to start
  padding: vars.$spacing-medium;
  margin-block: 0.5rem;
  transition:
    transform 0.25s ease,
    box-shadow 0.25s ease,
    background 0.25s ease,
    border-color 0.25s ease;
  cursor: pointer;
  border: 2px solid transparent;

  .category-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: vars.$spacing-small;
    color: vars.$text-color-tertiary;
    transition: color 0.25s ease;

    svg {
      width: 24px;
      height: 24px;
      stroke-width: 1.5px;
    }
  }

  span {
    font-size: clamp(0.7rem, 0.9rem, 1.2rem);
    font-weight: 600;
    line-height: normal;
    color: vars.$text-color-tertiary;
    text-align: start;
    transition: color 0.25s ease;
  }

  &:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 24px vars.$black-opacity-35;
    
    .category-card__icon {
      color: vars.$color-brand;
    }
    
    span {
      color: var(--text-primary);
    }
  }

  // Smaller padding on very small screens
  @media (max-width: 420px) {
    padding: vars.$spacing-small;
    min-height: 70px;
    
    .category-card__icon svg {
      width: 20px;
      height: 20px;
    }
  }

  &--selected {
    background-color: vars.$light-gray-f0f0f021;
    box-shadow:
      0 2px 8px vars.$black-opacity-10,
      0 0 0 1px vars.$black-opacity-05;
      
    .category-card__icon {
      color: vars.$color-brand;
    }

    span {
      font-weight: 600;
      color: color.adjust(vars.$color-brand, $lightness: -10%, $saturation: 10%);
      color: vars.$color-brand;
    }
  }
}
