@use 'utilities/variables' as vars;
@use 'utilities/mixins' as mixins;
@use 'sass:color';

.lang-switcher {
  display: flex;
  justify-content: center;
  align-items: center;

  &__menu {
    display: flex;
    flex-direction: column;
    padding: 0.375rem;
    gap: 0.125rem;
  }

  &__option {
    background: transparent;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    font-size: vars.$font-size-sm-md;
    font-weight: 400;
    letter-spacing: 0.01em;
    padding: 0.75rem 1.25rem;
    text-align: left;
    transition:
      color 0.25s cubic-bezier(0.4, 0, 0.2, 1),
      background 0.25s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.15s ease;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    min-height: 40px;
    position: relative;
    border-radius: vars.$border-radius-small;
    overflow: hidden;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

    // Subtle shimmer effect on hover
    &::after {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent 0%, vars.$white-opacity-03 50%, transparent 100%);
      transition: left 0.5s ease;
      pointer-events: none;
    }

    &:hover {
      color: var(--text-primary);
      background: vars.$white-opacity-03;
      transform: translateX(2px);

      &::after {
        left: 100%;
      }
    }

    &:active {
      transform: translateX(1px) scale(0.98);
      transition: transform 0.1s ease;
    }

    &--active {
      color: vars.$color-brand;
      font-weight: 500;

      // Elegant minimalist accent bar
      &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 2.5px;
        height: 20px;
        background: vars.$color-brand;
        border-radius: 0 2px 2px 0;
        // box-shadow: 0 0 6px rgba(vars.$color-brand, 0.4);
      }

      &:hover {
        background: rgba(vars.$color-brand, 0.13);
        color: color.adjust(vars.$color-brand, $lightness: 6%);
        transform: translateX(2px);
      }
    }

    html[dir='rtl'] & {
      text-align: right;
      justify-content: flex-end;

      &:hover {
        transform: translateX(-2px);
      }

      &:active {
        transform: translateX(-1px) scale(0.98);
      }

      &--active {
        &::before {
          left: auto;
          right: 0;
          border-radius: 2px 0 0 2px;
        }

        &:hover {
          transform: translateX(-2px);
        }
      }
    }

    // Responsive
    @media (max-width: 768px) {
      padding: 0.6875rem 1.125rem;
      font-size: vars.$font-size-small;
      min-height: 38px;
      letter-spacing: 0.008em;

      &:hover {
        transform: none;
      }

      &--active:hover {
        transform: none;
      }

      html[dir='rtl'] & {
        &:hover,
        &--active:hover {
          transform: none;
        }
      }
    }
  }

  // Ensure the dropdown container doesn't interfere with layout
  .popup-dropdown-container {
    display: inline-flex;
  }
}
