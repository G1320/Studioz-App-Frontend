@use 'variables' as vars;

// Centralized skeleton loader styles
// All skeleton loaders across the app use these base styles
// Minimal, calm, professional loader for studioz.co.il
.skeleton-loader {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  border-radius: inherit;
  pointer-events: none;
  z-index: 1;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  // Black background panel
  background: rgba(0, 0, 0, 0.734);
  // Instant appearance, smooth fade-out on image load
  opacity: 1;
  transition: opacity 100ms ease-out;

  // Simple spinning loader
  &::before {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    // Thin stroke (1.5-2px) - using 1.5px for ultra-minimal feel
    border: 1.5px solid transparent;
    // Neutral gray base with subtle brand accent
    border-top-color: vars.$white-opacity-20;
    border-right-color: vars.$white-opacity-20;
    // Subtle brand accent on one segment (optional - can be removed for pure neutral)
    border-bottom-color: rgba(16, 185, 129, 0.3); // vars.$color-brand with low opacity
    border-radius: 50%;
    // Smooth continuous rotation, linear timing, perfect infinite loop
    animation: skeleton-spin 1s linear infinite;
    // GPU-friendly transform
    will-change: transform;
    // RTL/LTR safe (rotation is direction-agnostic)
  }
}

// Smooth continuous rotation animation
// Linear timing ensures no perceptible start/end
@keyframes skeleton-spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

// Respect reduced motion preference
// Disable animation but keep the element visible for accessibility
@media (prefers-reduced-motion: reduce) {
  .skeleton-loader {
    &::before {
      animation: none;
      // Show static indicator instead of animation
      border-top-color: vars.$white-opacity-15;
      border-right-color: vars.$white-opacity-15;
      border-bottom-color: vars.$white-opacity-15;
      border-left-color: vars.$white-opacity-15;
    }
  }
}
