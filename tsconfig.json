{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@contexts/*": ["src/contexts/*"],
      "@forms/*": ["src/forms/*"],
      "@hooks/*": ["src/hooks/*"],
      "@types/*": ["src/types/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/i18n.ts",
    "src/scripts/paypalScript.js",
    "src/components/common/checkout/PaypalCheckout.tsx",
    "src/components/common/checkout/Checkout.jsx",
    "src/components/common/vendorOnboarding/VendorRegistration.js",
    "src/pages/subscription-page/SumitSubscriptionPaymentForm.jsx"
  ],
  "exclude": ["node_modules", "dist"]
}
