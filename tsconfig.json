{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@features/*": ["src/features/*"],
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/shared/*"],
      "@core/*": ["src/core/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/core/i18n/config.ts",
    "src/scripts/paypalScript.js",
    "src/features/entities/payments/sumit/forms/temp.tsx",
    "src/features/entities/payments/sumit/utils/preparePaymentFormData.js",
    "src/features/entities/payments/sumit/forms/MultivendorPaymentForm.jsx"
  ],
  "exclude": ["node_modules", "dist"]
}
